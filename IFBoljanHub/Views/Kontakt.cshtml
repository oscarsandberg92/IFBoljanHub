@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Kontakt>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}

<div class="container">
    <h1>@Model.Value("header")</h1>
  
    
    <div class="contact-section">
        <div class="contact-info">
          <!--  <h2>Contact Details</h2>-->
            <p>Address: @Model.Value("address")</p>
            <p>E-mail: <a href="mailto:@Model.Value("email")">@Model.Value("email")</a></p>
            <p>Telefonnummer: @Model.Value("phone")</p>
        </div>
        
        <div class="contact-form">
            <h2>Kontakta oss</h2>
            <form method="post" action="/submit-contact-form">
                <div class="form-group">
                    <label for="name">Namn</label>
                    <input type="text" id="name" name="name" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="message">Din fråga</label>
                    <textarea id="message" name="message" rows="5" class="form-control" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Skicka!</button>
            </form>
        </div>
    </div>
    <div class="container">
    <h2 class="text-center mt-5">Träffa våra tränare</h2>
    <div class="row mt-4">
        @for (var i = 0; i < 8; i++)
        {
            <div class="col-md-3 mb-4">
                <div class="card">
                    <img src="https://via.placeholder.com/50x50" class="card-img-top" alt="Coach Image">
                    <div class="card-body">
                        <h5 class="card-title">Coach Name</h5>
                        <p class="card-text">Email: coach@email.com</p>
                        <p class="card-text">Role: Coach Role</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 
    <div class="row mt-3">
        <div class="col">
            <h2>Hitta oss</h2>
            <div class="embed-responsive embed-responsive-16by9">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2179.0112022520675!2d12.505504976858697!3d56.89719557352925!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4651cecf3f7eb1a3%3A0x86a36f8224a2180e!2sSkogsv%C3%A4gen%201%2C%20311%2046%20Falkenberg!5e0!3m2!1sen!2sse!4v1698776745243!5m2!1sen!2sse" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
 
    <div class="row">
        <div class="col">
           <br>
        </div>
    </div>
</div>
